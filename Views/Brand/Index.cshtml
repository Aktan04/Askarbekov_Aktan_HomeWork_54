@model List<Brand>

@{
    ViewBag.Title = "brands";
    Layout = "_Layout";
}

<h2>Бренды</h2>

<a asp-action="Create" asp-controller="Brand" class="btn btn-primary mb-3">Добавить бренд</a>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Категории еще не добавлены</td>
            </tr>
        }
        else
        {
            @foreach (var brand in Model)
            {
                <tr>
                    <td>@brand.Id</td>
                    <td>@brand.NameOfBrand</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Delete" asp-controller="Brand" asp-route-Id="@brand.Id" class="btn btn-danger">Удалить</a>
                            <a asp-action="Edit" asp-controller="Brand" asp-route-id="@brand.Id" class="btn btn-primary mb-3">Редактировать бренд</a>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>