@model Category

@{
    ViewBag.Title = "EditCategory";
    Layout = "_Layout";
}

<h2>Редактирование категории</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Category" method="post">
            @Html.ValidationSummary(true)
            <input asp-for="Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="NameOfCategory"></label>
                <input asp-for="NameOfCategory" class="form-control"/>
                <span asp-validation-for="NameOfCategory" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Изменить</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}