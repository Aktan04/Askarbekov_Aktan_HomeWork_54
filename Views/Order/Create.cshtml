@model Order

@{
    ViewBag.Title = "Оформление заказа";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2>Оформление заказа</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" asp-controller="Order" method="post">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label asp-for="Name">Имя покупателя</label>
                    <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Адрес доставки</label>
                    <input asp-for="Address" type="text" class="form-control">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactPhone">Номер телефона</label>
                    <input asp-for="ContactPhone" type="text" class="form-control">
                    <span asp-validation-for="ContactPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ProductName">Смартфон:</label>
                    <input disabled type="text" value="@Model.Product.Name" class="form-control">
                    <input asp-for="ProductId" type="hidden" value="@Model.Product.Id">
                </div>
                <button type="submit" class="btn btn-primary mt-2">Заказать</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}