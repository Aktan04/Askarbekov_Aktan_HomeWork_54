@model Product

@{
    ViewBag.Title = "Подтверждение удаления";
    Layout = "_Layout";
}

<h2>Подтверждение удаления</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="ConfirmDelete" asp-controller="Product" asp-route-Id="@Model.Id">
                <p>Вы действительно хотите удалить устройство @Model.Name?</p>

                <div class="form-group">
                    <input type="submit" value="Да" class="btn btn-danger">
                    <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Нет</a>
                </div>
            </form>
        </div>
    </div>
</div>